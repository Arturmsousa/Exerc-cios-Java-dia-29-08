import java.util.Scanner;

/**
 * Verifica√ß√£o de Idade e Acesso
 * Objetivo: Praticar tipos de dados, vari√°veis, comandos condicionais,
 * operadores relacionais, entrada de dados e la√ßos de repeti√ß√£o
 */
public class VerificacaoIdade {
    
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("=== SISTEMA DE VERIFICA√á√ÉO DE IDADE ===");
        System.out.println("Para acessar o conte√∫do restrito, voc√™ deve ter 18 anos ou mais.");
        System.out.println();
        
        // Declara√ß√£o de vari√°veis
        int idade = -1; // Inicializa com valor inv√°lido para entrar no la√ßo
        boolean idadeValida = false;
        
        // La√ßo de repeti√ß√£o para garantir entrada de idade v√°lida
        while (!idadeValida) {
            System.out.print("Digite sua idade: ");
            
            try {
                // Entrada de dados - solicita a idade
                idade = scanner.nextInt();
                
                // Valida√ß√£o se a idade √© um n√∫mero positivo
                if (idade < 0) {
                    System.out.println("ERRO: A idade deve ser um n√∫mero positivo!");
                    System.out.println("Tente novamente.\n");
                } else if (idade == 0) {
                    System.out.println("ERRO: A idade deve ser maior que zero!");
                    System.out.println("Tente novamente.\n");
                } else {
                    // Idade v√°lida - sai do la√ßo
                    idadeValida = true;
                }
                
            } catch (Exception e) {
                System.out.println("ERRO: Por favor, digite apenas n√∫meros inteiros!");
                System.out.println("Tente novamente.\n");
                // Limpa o buffer do scanner
                scanner.nextLine();
            }
        }
        
        System.out.println(); // Linha em branco para melhor formata√ß√£o
        
        // Comandos condicionais com operadores relacionais
        if (idade < 18) {
            System.out.println("üö´ ACESSO NEGADO");
            System.out.println("Voc√™ precisa ter pelo menos 18 anos para acessar este conte√∫do.");
            
            // Calcula quantos anos faltam
            int anosFaltantes = 18 - idade;
            if (anosFaltantes == 1) {
                System.out.println("Falta apenas " + anosFaltantes + " ano para voc√™ ter acesso.");
            } else {
                System.out.println("Faltam " + anosFaltantes + " anos para voc√™ ter acesso.");
            }
            
        } else {
            System.out.println("‚úÖ ACESSO PERMITIDO");
            System.out.println("Bem-vindo! Voc√™ pode acessar o conte√∫do restrito.");
            
            // Mensagem adicional baseada na faixa et√°ria
            if (idade >= 18 && idade <= 25) {
                System.out.println("Categoria: Jovem adulto");
            } else if (idade >= 26 && idade <= 59) {
                System.out.println("Categoria: Adulto");
            } else if (idade >= 60) {
                System.out.println("Categoria: Idoso");
            }
        }
        
        System.out.println("\nIdade informada: " + idade + " anos");
        System.out.println("Obrigado por usar nosso sistema!");
        
        scanner.close();
    }
}
