import java.util.Scanner;

/**
 * Contagem Regressiva
 * Objetivo: Praticar tipos de dados, la√ßos de repeti√ß√£o, 
 * operadores l√≥gicos e comandos condicionais
 */
public class ContagemRegressiva {
    
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("=== CONTAGEM REGRESSIVA ===");
        System.out.println("Digite um n√∫mero inteiro positivo para iniciar a contagem!");
        System.out.println();
        
        // Declara√ß√£o de vari√°veis
        int numero = 0;
        boolean numeroValido = false;
        
        // La√ßo de repeti√ß√£o para entrada v√°lida
        while (!numeroValido) {
            System.out.print("Digite um n√∫mero inteiro positivo: ");
            
            try {
                // Entrada de dados
                numero = scanner.nextInt();
                
                // Operadores l√≥gicos para verificar se o n√∫mero √© negativo ou zero
                if (numero <= 0) {
                    System.out.println("‚ö†Ô∏è  ERRO: O n√∫mero deve ser positivo (maior que zero)!");
                    System.out.println("Programa encerrado.\n");
                    scanner.close();
                    return; // Para o programa imediatamente
                } else {
                    numeroValido = true; // N√∫mero v√°lido, sai do la√ßo
                }
                
            } catch (Exception e) {
                System.out.println("‚ö†Ô∏è  ERRO: Por favor, digite apenas n√∫meros inteiros!");
                System.out.println("Tente novamente.\n");
                // Limpa o buffer do scanner
                scanner.nextLine();
            }
        }
        
        System.out.println("\nüöÄ Iniciando contagem regressiva de " + numero + "!");
        System.out.println("Pressione Ctrl+C para interromper a qualquer momento.\n");
        
        // Pausa antes de come√ßar
        try {
            Thread.sleep(1000); // Pausa de 1 segundo
        } catch (InterruptedException e) {
            System.out.println("Contagem interrompida!");
        }
        
        // La√ßo de repeti√ß√£o para contagem regressiva (usando while)
        while (numero > 0) {
            if (numero == 1) {
                System.out.println("üî• Falta " + numero + " segundo!");
            } else {
                System.out.println("‚è∞ Faltam " + numero + " segundos");
            }
            
            // Decrementa o n√∫mero
            numero--;
            
            // Pausa de 1 segundo entre cada n√∫mero
            try {
                Thread.sleep(1000);
            } catch (InterruptedException e) {
                System.out.println("\nContagem interrompida pelo usu√°rio!");
                scanner.close();
                return;
            }
        }
        
        // Quando a contagem chega a zero
        System.out.println("\nüéâ TEMPO ESGOTADO! üéâ");
        System.out.println("A contagem regressiva chegou ao fim!");
        
        // Vers√£o alternativa usando la√ßo for (comentada)
        /*
        System.out.println("\n--- Vers√£o alternativa com la√ßo FOR ---");
        for (int i = numero; i > 0; i--) {
            if (i == 1) {
                System.out.println("üî• Falta " + i + " segundo!");
            } else {
                System.out.println("‚è∞ Faltam " + i + " segundos");
            }
            
            try {
                Thread.sleep(1000);
            } catch (InterruptedException e) {
                System.out.println("Contagem interrompida!");
                break;
            }
        }
        */
        
        scanner.close();
    }
}
